CREATE FUNCTION udf_GenreFilter(@genre NVARCHAR(30)) 
RETURNS TABLE AS
RETURN
(
		SELECT 
			b.Id as BookId
			,b.Title
			,b.YearPublished
			,b.ISBN
			,a.[Name] AS Author
			, l.[Name] AS [Library]
		FROM Books as B
		JOIN LibrariesBooks AS lb
		  ON lb.BookId=b.Id
		JOIN Libraries AS l
		  ON lb.LibraryId=l.Id
		JOIN Authors AS a
		  ON b.AuthorId=a.Id
		JOIN Genres AS g
		  ON b.GenreId=g.Id
	    WHERE g.[Name]=@genre
)
